<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.boot.springboottemplatebase.mapper.SystemPagePermissionRefMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.boot.springboottemplatebase.domain.systempage.persistent.SystemPagePermissionRef">
        <id column="id" property="id" />
        <result column="intercept_urls" property="interceptUrls" />
        <result column="page_id" property="pageId" />
        <result column="permission_id" property="permissionId" />
        <result column="create_by" property="createBy" />
        <result column="create_time" property="createTime" />
        <result column="update_by" property="updateBy" />
        <result column="update_time" property="updateTime" />
        <result column="deleted" property="deleted" />
    </resultMap>

    <delete id="deleteRefByPageId">
        delete from system_page_permission_ref where page_id = #{pageId}
    </delete>

    <select id="securityGetPagePermissionList"
            resultType="com.example.boot.springboottemplatebase.domain.systemrole.value.SecurityGetPagePermissionListVO">
        select
            intercept_urls,
            (select code from system_page where id = page_id) as page_code,
            (select code from system_permission where id = permission_id) as permission_code
        from
            system_page_permission_ref
        where
            deleted = '0'
        order by
            page_id asc
    </select>

</mapper>
